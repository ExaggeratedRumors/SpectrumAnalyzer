<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_page"
    android:orientation="vertical"
    tools:context="com.thesis.spectrumanalyzer.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">


        <com.thesis.spectrumanalyzer.GraphView
            android:id="@+id/graphView"
            android:layout_width="match_parent"
            android:layout_height="382dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/aWeighting"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="87dp"
            android:text="@string/aWeightingText" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cWeighting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="87dp"
            android:text="@string/cWeightingText" />
    </RelativeLayout>


</LinearLayout>
